<h1>One dish page</h1>

<article class="card">
  <img src={{menuItem.image}} alt={{menuItem.name}} class="card__image" />
  <div class="card__content">
    <h2 class="card__name">{{name}}</h2>
    <p class="card__price">
      <i class="material-icons"> monetization_on </i>
      {{menuItem.price}} кредитов
    </p>
    <p class="card__descr">
      {{menuItem.description}}
    </p>
    <ul class="tag-list">
      {{#each menuItem.ingredients}}
      <li class="tag-list__item">{{this}}</li>
      {{/each}}
    </ul>
  </div>
  <button class="card__button button">
    <i class="material-icons button__icon"> shopping_cart </i>
    В корзину
  </button>
</article>